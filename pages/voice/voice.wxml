<!--index.wxml-->
<view class="container" bindtouchend="end" bindtouchstart="start">
  <button bindtap="voiceStart" type="primary" class="system-btn">开始录音</button>
  <button bindtap="voiceOver" type="primary" class="system-btn">结束录音</button>
  <button bindtap="voicePlay" type="primary" class="system-btn">播放录音</button>
  <button bindtap="voiceStop" type="primary" class="system-btn">暂停播放</button>
</view>

